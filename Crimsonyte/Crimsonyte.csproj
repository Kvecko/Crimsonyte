      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="pics\goblin.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="pics\guardian.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
