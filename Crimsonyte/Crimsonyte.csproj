    <None Remove="pics\goblin.png" />
    <None Remove="pics\guardian.png" />
    <None Remove="pics\heal.png" />
    <None Remove="pics\melee.png" />
    <None Remove="pics\parry.png" />
    <None Remove="pics\player.png" />
    <None Remove="pics\skeleton.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="logo.ico" />
